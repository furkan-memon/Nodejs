<%- include('partials/head') %>
<%- include('partials/navbar') %>

<div class="flex justify-center items-center min-h-[80vh]">
  <div class="bg-white p-8 rounded-xl shadow-lg w-[380px]">
    <h2 class="text-2xl font-semibold mb-6 text-center">Upload File</h2>

    <form action="/upload" method="POST" class="space-y-4 gap-4" enctype="multipart/form-data">
        <input type="file" name="file" placeholder="File" class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-green-500" />

      
      
      <button type="submit"
        class="w-full bg-green-600 text-white py-2 rounded-md hover:bg-green-700">
        Upload File
      </button>
    </form>
  </div>
</div>


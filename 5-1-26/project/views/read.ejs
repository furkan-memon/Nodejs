<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Users</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-zinc-900 min-h-screen text-zinc-100">
<nav class="bg-zinc-800 border-b border-zinc-700">
    <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">
      
      <h1 class="text-lg font-semibold">
        User Panel
      </h1>

      <div class="flex gap-6 text-sm">
        <a
          href="/"
          class="text-zinc-300 hover:text-white transition"
        >
          Create User
        </a>
        <a
          href="/read"
          class="text-zinc-400 hover:text-white transition"
        >
          All Users
        </a>
      </div>

    </div>
  </nav>
  <div class="max-w-6xl mx-auto space-y-10">

    
    <div class="text-center space-y-2">
      <h1 class="text-2xl font-semibold">All Users</h1>
      <p class="text-sm text-zinc-400">
        Manage user profiles from here
      </p>
    </div>

    <!-- USERS GRID -->
    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

     

    <%users.forEach((user)=>{%>
         <div class="bg-zinc-800 rounded-xl p-4 space-y-3 hover:bg-zinc-750 transition">
        
        <!-- IMAGE / AVATAR -->
        <div class="w-full h-48 rounded-lg flex items-center justify-center text-zinc-400 text-sm">
          <img src="<%= user.imgurl %>" alt="">
        </div>

        <!-- USER INFO -->
        <div class="space-y-1">
          <h3 class="text-sm font-semibold truncate">
            <%= user.name %>
          </h3>
          <p class="text-xs text-zinc-400 truncate">
            <%= user.email %>
          </p>
        </div>

        <!-- ACTIONS -->
        <div class="flex justify-end gap-4 pt-2 text-xs">
          <a href="/edit/<%= user._id %>" class="text-blue-400 hover:text-blue-300">
            Edit
          </a>
          <a href="/delete/<%= user._id %>" class="text-red-400 hover:text-red-300">
            Delete
          </a>
        </div>
      </div>
    <%}) %>
      

    </div>
  </div>

</body>
</html>
